<Window x:Class="AppleMusicDownloadManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppleMusicDownloadManager"
        mc:Ignorable="d"
        Title="Apple Music Download Manager" Height="720" Width="1280"
        Closing="MainWindow_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="工作目录将从环境变量 'AMDL-WSL1' 自动加载。" FontWeight="Bold"/>
                <TextBlock x:Name="InfoPathTextBlock" Text="正在检查环境变量..." FontStyle="Italic" Foreground="Gray" Margin="0,2,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="开始处理" Width="120" IsEnabled="False" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="终止" Width="80" IsEnabled="False" Margin="10,0,0,0" Background="#FFE81123"  Click="StopButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="Decryptor Log" FontWeight="Bold" Margin="0,0,0,5"/>
                <RichTextBox x:Name="DecryptorLogRtb" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas">
                    <FlowDocument/>
                </RichTextBox>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top" Text="Downloader Log" FontWeight="Bold" Margin="0,0,0,5"/>
                <RichTextBox x:Name="DownloaderLogRtb" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas">
                    <FlowDocument/>
                </RichTextBox>
            </DockPanel>
        </Grid>

        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Initializing..."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>